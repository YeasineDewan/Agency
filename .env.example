# ===========================================
# AGENCY WEBSITE ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values

# Environment Settings
NODE_ENV=development
REACT_APP_ENV=development

# Skip Preflight Checks (set to true if you encounter build issues)
SKIP_PREFLIGHT_CHECK=false

# ===========================================
# HOSTING & DEPLOYMENT CONFIGURATION
# ===========================================

# Your Domain (replace with your actual domain)
REACT_APP_BASE_URL=https://yourdomain.com
REACT_APP_API_BASE_URL=https://api.yourdomain.com

# Hosting Provider (cpanel, vercel, netlify, etc.)
REACT_APP_HOSTING_PROVIDER=cpanel
REACT_APP_PUBLIC_PATH=/

# CDN Configuration (optional)
REACT_APP_CDN_URL=https://cdn.yourdomain.com
REACT_APP_ASSETS_URL=https://cdn.yourdomain.com/assets

# ===========================================
# API ENDPOINTS & EXTERNAL SERVICES
# ===========================================

# Backend API URL
REACT_APP_API_URL=https://api.yourdomain.com/v1
REACT_APP_GRAPHQL_URL=https://api.yourdomain.com/graphql

# Authentication Service
REACT_APP_AUTH_URL=https://auth.yourdomain.com
REACT_APP_OAUTH_CLIENT_ID=your_oauth_client_id
REACT_APP_OAUTH_CLIENT_SECRET=your_oauth_client_secret

# Payment Gateway Keys
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id
REACT_APP_RAZORPAY_KEY_ID=your_razorpay_key_id

# Email Service (EmailJS)
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
REACT_APP_EMAILJS_USER_ID=your_emailjs_user_id

# Analytics & Tracking
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
REACT_APP_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
REACT_APP_HOTJAR_ID=your_hotjar_id
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Social Media APIs
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id
REACT_APP_TWITTER_API_KEY=your_twitter_api_key
REACT_APP_LINKEDIN_CLIENT_ID=your_linkedin_client_id
REACT_APP_INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Content Management System
REACT_APP_CMS_URL=https://cms.yourdomain.com
REACT_APP_CONTENTFUL_SPACE_ID=your_contentful_space_id
REACT_APP_CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token

# File Storage & Media
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your_cloudinary_upload_preset
REACT_APP_AWS_S3_BUCKET=your_s3_bucket_name
REACT_APP_AWS_REGION=us-east-1

# Real-time Features
REACT_APP_PUSHER_APP_KEY=your_pusher_app_key
REACT_APP_PUSHER_APP_CLUSTER=mt1
REACT_APP_SOCKET_URL=https://socket.yourdomain.com

# Error Monitoring & Performance
REACT_APP_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
REACT_APP_LOGROCKET_APP_ID=your_logrocket_app_id

# Automation & Webhooks
REACT_APP_ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_id/
REACT_APP_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_slack_webhook
REACT_APP_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_discord_webhook

# ===========================================
# FEATURE FLAGS & CONFIGURATION
# ===========================================

# Enable/Disable Features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_CHAT_SUPPORT=true
REACT_APP_ENABLE_NEWSLETTER=true
REACT_APP_ENABLE_SOCIAL_SHARING=true
REACT_APP_ENABLE_COOKIE_CONSENT=true

# Performance Settings
REACT_APP_IMAGE_LAZY_LOADING=true
REACT_APP_ENABLE_COMPRESSION=true
REACT_APP_CACHE_STRATEGY=network-first

# Security Settings
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_HSTS=true
REACT_APP_CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.yourdomain.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.yourdomain.com wss://socket.yourdomain.com;

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================

# Console Logging (set to false in production)
REACT_APP_DISABLE_CONSOLE_LOGS=false

# Error Reporting Level (error, warn, info, debug)
REACT_APP_ERROR_REPORTING_LEVEL=error

# Performance Monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# SETUP INSTRUCTIONS
# ===========================================
#
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual API keys and URLs
# 3. For production, copy to .env.production and update values accordingly
# 4. For local development, copy to .env.local for local overrides
#
# IMPORTANT: Never commit .env files with real credentials to version control!
# Add .env* to your .gitignore file
