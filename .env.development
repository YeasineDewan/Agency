# ===========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===========================================

# Environment Settings
NODE_ENV=development
REACT_APP_ENV=development

# Skip Preflight Checks
SKIP_PREFLIGHT_CHECK=true

# ===========================================
# DEVELOPMENT SERVER CONFIGURATION
# ===========================================

# Local Development URLs
REACT_APP_BASE_URL=http://localhost:3000
REACT_APP_API_BASE_URL=http://localhost:8000

# Development Server Settings
REACT_APP_PUBLIC_PATH=/
REACT_APP_HOSTING_PROVIDER=local

# ===========================================
# DEVELOPMENT API ENDPOINTS
# ===========================================

# Local Backend API
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_GRAPHQL_URL=http://localhost:8000/graphql

# Mock Services (for development)
REACT_APP_USE_MOCK_API=true
REACT_APP_MOCK_DELAY=1000

# ===========================================
# DEVELOPMENT TOOLS & DEBUGGING
# ===========================================

# Enable Development Features
REACT_APP_ENABLE_DEV_TOOLS=true
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_ERROR_BOUNDARY=true

# Logging & Debugging
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_CONSOLE_LOGS=true
REACT_APP_ENABLE_PERFORMANCE_LOGGING=true

# Hot Module Replacement
REACT_APP_ENABLE_HMR=true

# ===========================================
# DEVELOPMENT INTEGRATIONS (Test Keys)
# ===========================================

# Analytics (Development/Test Keys)
REACT_APP_GOOGLE_ANALYTICS_ID=GA_DEV_MEASUREMENT_ID
REACT_APP_MIXPANEL_TOKEN=dev_mixpanel_token

# Email Service (Development)
REACT_APP_EMAILJS_SERVICE_ID=dev_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=dev_emailjs_template_id
REACT_APP_EMAILJS_USER_ID=dev_emailjs_user_id

# Payment (Test/Stripe Test Keys)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
REACT_APP_PAYPAL_CLIENT_ID=dev_paypal_client_id

# ===========================================
# FEATURE FLAGS (Development)
# ===========================================

# Enable All Features in Development
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_CHAT_SUPPORT=true
REACT_APP_ENABLE_NEWSLETTER=true
REACT_APP_ENABLE_SOCIAL_SHARING=true
REACT_APP_ENABLE_COOKIE_CONSENT=false

# Development Performance Settings
REACT_APP_IMAGE_LAZY_LOADING=false
REACT_APP_ENABLE_COMPRESSION=false
REACT_APP_CACHE_STRATEGY=no-cache

# ===========================================
# DEVELOPMENT SECURITY (Relaxed)
# ===========================================

REACT_APP_ENABLE_CSP=false
REACT_APP_ENABLE_HSTS=false
REACT_APP_CONTENT_SECURITY_POLICY=default-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:* https://cdn.jsdelivr.net https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:;
